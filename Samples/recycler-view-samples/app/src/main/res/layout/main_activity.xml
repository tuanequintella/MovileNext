<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/main_linear_vertical_recycler_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_linear_vertical_recycler" />

    <Button
        android:id="@+id/main_linear_horizontal_recycler_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_linear_horizontal_recycler" />

    <Button
        android:id="@+id/main_grid_recycler_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_grid_recycler" />

</LinearLayout>