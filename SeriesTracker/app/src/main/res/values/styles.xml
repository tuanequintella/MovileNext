<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/theme_colorPrimaryDark</item>
        <item name="colorAccent">@color/theme_colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/theme_textColor</item>
        <item name="android:textColorPrimary">@color/theme_textColorPrimary</item>
        <item name="android:windowBackground">@color/theme_windowBackground</item>
    </style>

    <style name="AppTheme.Card" parent="CardView">
        <item name="cardCornerRadius">@dimen/default_card_corner_radius</item>
        <item name="android:background">@color/default_background_second</item>
        <item name="android:layout_marginRight">@dimen/default_spacing_large</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_small</item>
    </style>

    <style name="AppTheme.Card.Content" parent="CardView">
        <item name="android:layout_margin">@dimen/default_spacing_large</item>
    </style>

    <style name="AppTheme.CardText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/default_textColor_fourth</item>
    </style>

    <style name="AppTheme.CardText.ItemLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/default_spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_small</item>
    </style>

    <style name="AppTheme.CardSeparator">
        <item name="android:background">@color/default_background_third</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_medium</item>
    </style>

    <style name="AppTheme.CardTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/default_textColor_third</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_small</item>
    </style>


    <!-- Base Navigation -->
    <style name="AppTheme.Base"></style>
    <style name="AppTheme.Base.Navigation"></style>

    <style name="AppTheme.Base.Navigation.Toolbar">
        <item name="android:layout_height">@dimen/base_navigation_toolbar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/base_navigation_toolbar_minHeight</item>
        <item name="android:background">@color/base_navigation_toolbar_background</item>
    </style>

    <style name="AppTheme.Base.Navigation.Toolbar.Transparent">
        <item name="android:background">@color/base_navigation_toolbar_transparent_background</item>
    </style>

    <style name="AppTheme.Base.Navigation.Drawer"></style>

    <style name="AppTheme.Base.Navigation.Drawer.Content">
        <item name="android:layout_width">@dimen/base_navigation_drawer_content_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@color/base_navigation_drawer_content_background</item>
    </style>


    <!-- Base Loading -->
    <style name="AppTheme.Base.Loading"></style>

    <style name="AppTheme.Base.Loading.Container">
        <item name="android:background">@color/base_loading_container_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.Base.Loading.Progress">
        <item name="android:layout_width">@dimen/base_loading_progress_size</item>
        <item name="android:layout_height">@dimen/base_loading_progress_size</item>
        <item name="android:indeterminate">true</item>
    </style>


    <!-- Episode Details -->
    <style name="AppTheme.EpisodeDetails"></style>

    <style name="AppTheme.EpisodeDetails.EpisodeScreenshot">
        <item name="android:layout_height">248dp</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_medium</item>
    </style>

    <style name="AppTheme.EpisodeDetails.EpisodeTitle">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/theme_textColorPrimary</item>
        <item name="android:layout_margin">@dimen/default_spacing_large</item>
        <item name="android:paddingRight">72dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.EpisodeDetails.DatetimeText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/default_textColor_second</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
    </style>

    <!-- Season Details -->
    <style name="AppTheme.SeasonDetails"></style>

    <!-- Show Details -->
    <style name="AppTheme.ShowDetails"></style>

    <style name="AppTheme.ShowDetails.FavoriteButton">
        <item name="android:layout_margin">@dimen/default_spacing_large</item>
    </style>

    <style name="AppTheme.ShowDetails.GenreText">
        <item name="android:background">@drawable/show_information_genre</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_small</item>
        <item name="android:layout_marginRight">@dimen/default_spacing_small</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/default_textColor_first</item>
    </style>

    <style name="AppTheme.ShowDetails.SeasonList"></style>

    <style name="AppTheme.ShowDetails.SeasonList.ItemCard" parent="CardView">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">176dp</item>
        <item name="cardCornerRadius">@dimen/default_card_corner_radius_small</item>
        <item name="android:background">@color/default_background_second</item>
        <item name="android:layout_margin">@dimen/default_spacing_small</item>
    </style>

    <style name="AppTheme.ShowDetails.SeasonList.ItemCard.SeasonNumber" parent="CardView">
        <item name="android:layout_marginLeft">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginRight">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_medium</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ShowDetails.SeasonList.ItemCard.EpisodeCount" parent="CardView">
        <item name="android:layout_marginLeft">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginRight">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_medium</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/default_textColor_fifth</item>
    </style>


    <!-- Shows -->
    <style name="AppTheme.Grid">
        <item name="android:numColumns">auto_fit</item>
        <item name="android:verticalSpacing">@dimen/default_spacing_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:columnWidth">114dp</item>
        <item name="android:stretchMode">spacingWidthUniform</item>
        <item name="android:paddingTop">@dimen/default_spacing_medium</item>
        <item name="android:paddingBottom">@dimen/default_spacing_medium</item>
        <item name="android:clipToPadding">false</item>
    </style>

</resources>