<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="88dp"
        android:layout_height="176dp"
        style="@style/AppTheme.ShowDetails.SeasonList.ItemCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/season_list_item_screenshot"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:src="@drawable/season_item_placeholder" />

            <TextView
                android:id="@+id/season_list_item_season_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.ShowDetails.SeasonList.ItemCard.SeasonNumber"
                android:text="Season 10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/season_list_item_episodes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.ShowDetails.SeasonList.ItemCard.EpisodeCount"
                android:text="10 episodes" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>