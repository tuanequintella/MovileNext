<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EpisodeDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/episode_screenshot"
            android:src="@drawable/highlight_placeholder"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            style="@style/AppTheme.EpisodeDetails.EpisodeScreenshot"/>

        <ImageView android:src="@drawable/overlay"
            android:layout_width="match_parent"
            style="@style/AppTheme.EpisodeDetails.EpisodeScreenshot"
            android:scaleType="fitXY" />

        <TextView android:text="@string/episode_title"
            style="@style/AppTheme.EpisodeDetails.EpisodeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/episode_screenshot" />

        <android.support.v7.widget.CardView
            android:id="@+id/episode_datetime"
            style="@style/AppTheme.EpisodeDetails.Card"
            android:layout_below="@+id/episode_screenshot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|start"
                style="@style/AppTheme.EpisodeDetails.Card.Content">

                <ImageView
                    android:id="@+id/episode_details_clock"
                    android:src="@drawable/episode_details_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="@string/episode_datetime"
                    style="@style/AppTheme.EpisodeDetails.DatetimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/episode_summary_title"
            style="@style/AppTheme.EpisodeDetails.Card"
            android:layout_below="@+id/episode_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/AppTheme.EpisodeDetails.Card.Content">

                <TextView
                    android:text="@string/episode_summary_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.EpisodeDetails.SummaryTitle" />
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    style="@style/AppTheme.EpisodeDetails.Separator" />

                <TextView
                    android:text="@string/episode_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.EpisodeDetails.Summary" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>